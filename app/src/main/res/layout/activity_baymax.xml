<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".BaymaxActivity">

    <Button
        android:id="@+id/btn_baymax2"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="480dp"
        android:backgroundTint="#BE1C1A "
        android:enabled="false"
        android:paddingLeft="40sp"
        android:paddingRight="55sp"
        android:text="BAYMAX"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:icon="@drawable/ic_i_baymax"
        app:iconPadding="10sp"
        app:iconSize="65sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/img_btn_home5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_voltar4"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="300dp"
        android:backgroundTint="#2C2C2C"
        android:onClick="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <ImageButton
        android:id="@+id/img_btn_home5"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="#2C2C2C"
        android:onClick="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_home" />

    <ImageButton
        android:id="@+id/img_btn_persons4"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="280dp"
        android:backgroundTint="#2C2C2C"
        android:onClick="Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_person" />

    <ImageButton
        android:id="@+id/img_btn_mais5"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#2C2C2C"
        android:onClick="Personagem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_add" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:backgroundTint="#BE1C1A"
        android:enabled="false"
        android:text="SE APROXIME DO SENSOR"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/img_btn_home5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_baymax2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/perfil_baymax"
        app:layout_constraintBottom_toTopOf="@+id/btn_descBaymax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_baymax2" />

    <Button
        android:id="@+id/btn_descBaymax"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#0000"
        android:enabled="false"
        android:text="@string/baymax_descricao"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_baymax2" />

</androidx.constraintlayout.widget.ConstraintLayout>