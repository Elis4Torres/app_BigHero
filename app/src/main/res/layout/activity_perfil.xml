<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".PerfilActivity">

    <EditText
        android:id="@+id/txt_nome"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="#F0F0F0"
        android:ems="10"
        android:hint="@string/perfil_nome"
        android:inputType="textEmailAddress"
        android:paddingStart="28dp"
        android:shadowRadius="40"
        android:textColor="#777777"
        android:textColorHint="#777777"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/txt_status"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="#F0F0F0"
        android:ems="10"
        android:hint="@string/perfil_status"
        android:inputType="textEmailAddress"
        android:paddingStart="28dp"
        android:shadowRadius="40"
        android:textColor="#777777"
        android:textColorHint="#777777"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_emailperfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nome" />

    <EditText
        android:id="@+id/txt_emailperfil"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="#F0F0F0"
        android:ems="10"
        android:hint="@string/perfil_email"
        android:inputType="textEmailAddress"
        android:paddingStart="28dp"
        android:shadowRadius="40"
        android:textColor="#777777"
        android:textColorHint="#777777"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_senhaperfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_status" />

    <EditText
        android:id="@+id/txt_senhaperfil"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="#F0F0F0"
        android:ems="10"
        android:hint="@string/perfil_senha"
        android:inputType="textEmailAddress"
        android:paddingStart="28dp"
        android:shadowRadius="40"
        android:textColor="#777777"
        android:textColorHint="#777777"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_sair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_emailperfil" />

    <Button
        android:id="@+id/btn_voltar2"
        android:layout_width="72dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="323dp"
        android:layout_marginBottom="653dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="Back"
        android:stateListAnimator="@null"
        android:tint="#FFFFFF"
        app:icon="@drawable/ic_arrow_back"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14999998" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_sair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perfil_hiro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="73dp"
        android:layout_height="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:text="@string/perfil"
        android:textColor="#C81920"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:backgroundTint="#C81920"
        android:text="SAIR"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>