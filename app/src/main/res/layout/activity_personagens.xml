<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".PersonagensActivity">

    <View
        android:id="@+id/view_hiro"
        android:layout_width="fill_parent"
        android:layout_height="89dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#000"
        app:layout_constraintBottom_toTopOf="@+id/view_baymax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_homey"
        android:layout_width="fill_parent"
        android:layout_height="89dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="#000"
        app:layout_constraintBottom_toTopOf="@+id/img_btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_wasabi" />

    <View
        android:id="@+id/view_wasabi"
        android:layout_width="fill_parent"
        android:layout_height="89dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#000"
        app:layout_constraintBottom_toTopOf="@+id/view_homey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_tomago" />

    <View
        android:id="@+id/view_baymax"
        android:layout_width="fill_parent"
        android:layout_height="89dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#000"
        app:layout_constraintBottom_toTopOf="@+id/view_fred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_hiro" />

    <View
        android:id="@+id/view_tomago"
        android:layout_width="fill_parent"
        android:layout_height="89dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#000"
        app:layout_constraintBottom_toTopOf="@+id/view_wasabi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_fred" />

    <ImageButton
        android:id="@+id/img_btn_home"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="#2C2C2C"
        android:onClick="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_homewhite" />

    <ImageButton
        android:id="@+id/img_btn_persons"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="280dp"
        android:backgroundTint="#2C2C2C"
        android:onClick="Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_personwhite" />

    <ImageButton
        android:id="@+id/img_home_mais"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#2C2C2C"
        android:onClick="Trailer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_addwhite" />

    <View
        android:id="@+id/view_fred"
        android:layout_width="fill_parent"
        android:layout_height="89dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#000"
        app:layout_constraintBottom_toTopOf="@+id/view_tomago"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_baymax" />

    <Button
        android:id="@+id/btn_hiro"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:backgroundTint="#593DA9 "
        android:onClick="Hiro"
        android:text="HIRO"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="15sp"
        app:icon="@drawable/ic_i_hero"
        app:iconPadding="10sp"
        app:iconSize="65sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/view_hiro"
        app:layout_constraintEnd_toEndOf="@+id/view_hiro"
        app:layout_constraintStart_toStartOf="@+id/view_hiro"
        app:layout_constraintTop_toTopOf="@+id/view_hiro" />

    <Button
        android:id="@+id/btn_baymax"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:backgroundTint="#BE1C1A "
        android:onClick="Baymax"
        android:text="BAYMAX"
        android:textSize="20sp"
        app:cornerRadius="15sp"
        app:icon="@drawable/ic_i_baymax"
        app:iconPadding="10sp"
        app:iconSize="65sp"
        app:layout_constraintBottom_toBottomOf="@id/view_baymax"
        app:layout_constraintEnd_toEndOf="@id/view_baymax"
        app:layout_constraintStart_toStartOf="@+id/view_baymax"
        app:layout_constraintTop_toTopOf="@id/view_baymax" />

    <Button
        android:id="@+id/btn_fred"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:backgroundTint="#4795DA "
        android:onClick="Fred"
        android:text="FRED"
        android:textSize="20sp"
        app:cornerRadius="15sp"
        app:icon="@drawable/ic_i_fred"
        app:iconPadding="10sp"
        app:iconSize="75sp"
        app:layout_constraintBottom_toBottomOf="@id/view_fred"
        app:layout_constraintEnd_toEndOf="@id/view_baymax"
        app:layout_constraintStart_toStartOf="@+id/view_fred"
        app:layout_constraintTop_toTopOf="@id/view_fred" />

    <Button
        android:id="@+id/btn_tomago"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:backgroundTint="#FFCE4A"
        android:onClick="Tomago"
        android:text="TOMAGO"
        android:textSize="20sp"
        app:cornerRadius="15sp"
        app:icon="@drawable/ic_i_gogo"
        app:iconPadding="10sp"
        app:iconSize="75sp"
        app:layout_constraintBottom_toBottomOf="@id/view_tomago"
        app:layout_constraintEnd_toEndOf="@id/view_tomago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_tomago" />

    <Button
        android:id="@+id/btn_wasabi"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:backgroundTint="#27B77B "
        android:onClick="Wasabi"
        android:text="WASABI"
        android:textSize="20sp"
        app:cornerRadius="15sp"
        app:icon="@drawable/ic_i_wasabi"
        app:iconPadding="10sp"
        app:iconSize="75sp"
        app:layout_constraintBottom_toBottomOf="@id/view_wasabi"
        app:layout_constraintEnd_toEndOf="@id/view_wasabi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_wasabi" />

    <Button
        android:id="@+id/btn_homey"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:backgroundTint="#E12CC1"
        android:onClick="Honey"
        android:text="HONEY"
        android:textSize="20sp"
        app:icon="@drawable/ic_i_honey"
        app:iconPadding="10sp"
        app:iconSize="70sp"
        app:layout_constraintBottom_toBottomOf="@id/view_homey"
        app:layout_constraintEnd_toEndOf="@id/view_homey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_homey"
        app:cornerRadius="15sp" />

    <ImageButton
        android:id="@+id/img_btn_voltar"
        android:layout_width="68dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#2C2C2C"
        android:onClick="Back"
        app:layout_constraintBottom_toTopOf="@+id/view_hiro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_backwhite" />

    <TextView
        android:id="@+id/txt_personegens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/persongens"
        android:textAlignment="center"
        android:textColor="#C81920"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_hiro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>